<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.MyRead" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/coolred</item>
        <item name="colorPrimaryVariant">@color/darkred</item>
        <item name="colorOnPrimary">@color/black</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/coolred2</item>
        <item name="colorSecondaryVariant">@color/darkred2</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="coverimage">
        <item name="srcCompat">@drawable/nocover_dark</item>
    </style>

    <style name="Theme.MyRead.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="CardColor" parent="CardView.Light">
        <item name="cardBackgroundColor">@color/cardview_dark_background</item>
    </style>

    <style name="Theme.MyRead.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.MyRead.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />
</resources>